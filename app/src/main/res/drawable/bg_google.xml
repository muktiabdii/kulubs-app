<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Lingkaran Putih -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#F3D394"/> <!-- Warna background -->
            <size
                android:width="60dp"
                android:height="60dp"/>
        </shape>
    </item>

    <!-- Logo Google -->
    <item>
        <bitmap
            android:src="@drawable/google"
            android:gravity="center"/>
    </item>

</layer-list>
